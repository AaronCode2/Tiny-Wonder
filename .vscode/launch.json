{
    "configurations": [
    {
        "name": "Program",
        "type": "cppdbg",
        "request": "launch",
        "preLaunchTask": "Cmake",
        "program": "${workspaceFolder}/build/Tiny_Wonder.exe",
        "args": [],
        "stopAtEntry": false,
        "cwd": "${workspaceFolder}/build",
        "environment": [],
        "externalConsole": true,
        "MIMode": "gdb",
        //! Put the path to your debugger!
        "miDebuggerPath": "C:/msys64/ucrt64/bin/gdb.exe", 
        "setupCommands": [
            {
                "description": "Enable pretty-printing for gdb",
                "text": "-enable-pretty-printing",
                "ignoreFailures": true
            },
            {
                "description": "Set Disassembly Flavor to Intel",
                "text": "-gdb-set disassembly-flavor intel",
                "ignoreFailures": true
            }
        ]
    }
    ]
}